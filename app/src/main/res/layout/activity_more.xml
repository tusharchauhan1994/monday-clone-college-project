<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16181B"
    android:fitsSystemWindows="true"
    tools:context=".MoreActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- PROFILE CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="#1E1F23"
                android:padding="24dp"
                android:layout_marginBottom="32dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp">

                <TextView
                    android:id="@+id/tv_profile_initial"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="@string/profile_initial_placeholder"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:background="@drawable/rounded_blue_bg"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name_placeholder"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_view_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_profile"
                    android:textColor="#595DFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- NAVIGATION SECTION TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/navigation"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <!-- NAVIGATION MENU ITEMS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1E1F23"
                android:paddingVertical="8dp">

                <TextView
                    style="@style/MenuItemStyle"
                    android:text="@string/update_feed"
                    app:drawableStartCompat="@android:drawable/ic_menu_send"
                    android:paddingVertical="14dp"/>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#222222"/>

                <TextView
                    style="@style/MenuItemStyle"
                    android:text="@string/my_team"
                    app:drawableStartCompat="@android:drawable/ic_menu_myplaces"
                    android:paddingVertical="14dp"/>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#222222"/>

                <TextView
                    style="@style/MenuItemStyle"
                    android:text="@string/search_everywhere"
                    app:drawableStartCompat="@android:drawable/ic_menu_search"
                    android:paddingVertical="14dp"/>
            </LinearLayout>

            <!-- SETTINGS SECTION TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="10dp"/>

            <!-- SETTINGS MENU ITEMS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1E1F23"
                android:paddingVertical="8dp">

                <TextView
                    style="@style/MenuItemStyle"
                    android:text="@string/account"
                    app:drawableStartCompat="@android:drawable/ic_menu_manage"
                    app:drawableEndCompat="@android:drawable/ic_media_next"
                    android:paddingVertical="14dp"/>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#222222"/>

                <TextView
                    style="@style/MenuItemStyle"
                    android:text="@string/notification_settings"
                    app:drawableStartCompat="@android:drawable/ic_menu_agenda"
                    app:drawableEndCompat="@android:drawable/ic_media_next"
                    android:paddingVertical="14dp"/>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#222222"/>

                <TextView
                    style="@style/MenuItemStyle"
                    android:text="@string/language"
                    app:drawableStartCompat="@android:drawable/ic_menu_compass"
                    app:drawableEndCompat="@android:drawable/ic_media_next"
                    android:paddingVertical="14dp"/>
            </LinearLayout>

            <!-- LOGOUT -->
            <TextView
                android:id="@+id/tv_logout"
                style="@style/MenuItemStyle"
                android:text="@string/logout"
                app:drawableStartCompat="@android:drawable/ic_lock_power_off"
                android:textColor="#FF5555"
                android:paddingVertical="18dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1F2126"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/btn_nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="#888888"
                android:layout_marginBottom="4dp"
                android:contentDescription="@string/home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textColor="#888888"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_nav_my_work"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="#888888"
                android:layout_marginBottom="4dp"
                android:contentDescription="@string/my_work" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_work"
                android:textColor="#888888"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_nav_notifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_popup_reminder"
                app:tint="#888888"
                android:layout_marginBottom="4dp"
                android:contentDescription="@string/notifications" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notifications"
                android:textColor="#888888"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_nav_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_more"
                app:tint="#595DFF"
                android:layout_marginBottom="4dp"
                android:contentDescription="@string/more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="#595DFF"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>