<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16181B"
    tools:context=".MoreActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingVertical="16dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="TC"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:background="@drawable/rounded_blue_bg"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tushar Chauhan"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Profile"
                    android:textColor="#595DFF"
                    android:textSize="14sp"/>
            </LinearLayout>

            <TextView
                style="@style/MenuItemStyle"
                android:text="Update Feed\n0 new updates"
                android:drawableLeft="@android:drawable/ic_menu_send"/>

            <TextView
                style="@style/MenuItemStyle"
                android:text="My team\n1 contacts"
                android:drawableLeft="@android:drawable/ic_menu_crop"/>

            <TextView
                style="@style/MenuItemStyle"
                android:text="Search everywhere\nFind anything in the app"
                android:drawableLeft="@android:drawable/ic_menu_search"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="#AAAAAA"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                style="@style/MenuItemStyle"
                android:text="Account"
                android:drawableLeft="@android:drawable/ic_menu_slideshow"
                android:drawableRight="@android:drawable/ic_menu_directions"
                android:textAlignment="viewStart"/>

            <TextView
                style="@style/MenuItemStyle"
                android:text="Notification settings"
                android:drawableLeft="@android:drawable/ic_menu_manage"
                android:drawableRight="@android:drawable/ic_menu_directions"
                android:textAlignment="viewStart"/>

            <TextView
                style="@style/MenuItemStyle"
                android:text="Language"
                android:drawableLeft="@android:drawable/ic_menu_compass"
                android:drawableRight="@android:drawable/ic_menu_directions"
                android:textAlignment="viewStart"/>

            <TextView
                android:id="@+id/tv_logout"
                style="@style/MenuItemStyle"
                android:text="Logout"
                android:drawableLeft="@android:drawable/ic_lock_power_off"
                android:textAlignment="viewStart"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1F2126"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/btn_nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:tint="#888888"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#888888"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_nav_my_work"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:tint="#888888"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Work"
                android:textColor="#888888"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_nav_notifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_popup_reminder"
                android:tint="#888888"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textColor="#888888"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_nav_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_more"
                android:tint="#595DFF"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:textColor="#595DFF"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>