<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/board_icon_container"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#3A3D42"
        android:src="@drawable/board_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Board Name -->
    <TextView
        android:id="@+id/tv_board_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="8dp"
        android:text="Start from scratch"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/board_icon_container"
        app:layout_constraintEnd_toStartOf="@id/iv_star"
        app:layout_constraintTop_toTopOf="@id/board_icon_container"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/tv_last_changed"/>

    <!-- Last Changed Time -->
    <TextView
        android:id="@+id/tv_last_changed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:text="Changed 1min ago"
        android:textColor="#888888"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/board_icon_container"
        app:layout_constraintEnd_toStartOf="@id/iv_star"
        app:layout_constraintTop_toBottomOf="@id/tv_board_name"
        app:layout_constraintBottom_toBottomOf="@id/board_icon_container"/>

    <!-- Star Icon -->
    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/btn_star_big_off"
        android:tint="#666666"
        android:padding="2dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toStartOf="@id/color_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Color Indicator on right -->
    <LinearLayout
        android:id="@+id/color_indicator"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/board_icon_container"
        app:layout_constraintBottom_toBottomOf="@id/board_icon_container">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#595DFF"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFD700"
            android:layout_marginTop="1dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>