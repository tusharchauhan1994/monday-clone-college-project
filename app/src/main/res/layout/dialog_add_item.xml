<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#1E1E1E"
    android:layout_gravity="bottom">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:background="#2A2A2A"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close"
            app:tint="#B5B5B5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add New Item"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_add_item_save"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Add"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#595DFF"
            android:enabled="false"
            android:alpha="0.4"/>
    </RelativeLayout>

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Item Name Input -->
        <EditText
            android:id="@+id/et_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Item name"
            android:textColorHint="#777777"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:paddingVertical="18dp"
            android:paddingStart="8dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3C3C3C"
            android:layout_marginBottom="20dp"/>

        <!-- Board Selection -->
        <LinearLayout
            android:id="@+id/layout_board_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="18dp"
            android:paddingHorizontal="6dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Board:"
                android:textColor="#AAAAAA"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_selected_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start from scratch"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#AAAAAA"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3C3C3C"
            android:layout_marginBottom="8dp"/>

        <!-- Group Selection -->
        <LinearLayout
            android:id="@+id/layout_group_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="18dp"
            android:paddingHorizontal="6dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Group:"
                android:textColor="#AAAAAA"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_selected_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Title"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#AAAAAA"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3C3C3C"/>

    </LinearLayout>

</LinearLayout>
