<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16181B"
    tools:context=".UpdateTaskActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ITEM NAME -->
            <EditText
                android:id="@+id/update_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item Name"
                android:textColorHint="#6F6F6F"
                android:textColor="@android:color/white"
                android:background="@drawable/abc_edit_text_material"
                android:padding="14dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#2A2D31" />

            <!-- PERSON -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Person"
                android:textColor="#D3D3D3"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <AutoCompleteTextView
                android:id="@+id/update_assignee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Assign to..."
                android:textColorHint="#6F6F6F"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:background="@drawable/abc_edit_text_material"
                android:backgroundTint="#2A2D31"
                android:layout_marginBottom="20dp"/>

            <!-- STATUS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#D3D3D3"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <Spinner
                android:id="@+id/update_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:spinnerMode="dropdown"
                android:popupBackground="#2A2D31"
                android:backgroundTint="#2A2D31"
                android:dropDownWidth="match_parent"
                android:layout_marginBottom="20dp" />

            <!-- PRIORITY -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:textColor="#D3D3D3"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <Spinner
                android:id="@+id/update_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:spinnerMode="dropdown"
                android:popupBackground="#2A2D31"
                android:backgroundTint="#2A2D31"
                android:dropDownWidth="match_parent"
                android:layout_marginBottom="20dp" />

            <!-- DUE DATE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date"
                android:textColor="#D3D3D3"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/update_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DD/MM/YYYY"
                android:textColorHint="#6F6F6F"
                android.textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="14dp"
                android:background="@drawable/abc_edit_text_material"
                android:backgroundTint="#2A2D31"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="30dp" />

            <!-- BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/save_item_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Save"
                    android:textStyle="bold"
                    android:backgroundTint="#007AFF"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/delete_item_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:textStyle="bold"
                    android:backgroundTint="#D9534F"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/congratulation_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/congratulation"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>
