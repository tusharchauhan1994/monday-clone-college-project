<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#16181B"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:elevation="8dp">

    <Button style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/btn_nav_home"
        android:text="Home"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:drawableTop="@drawable/ic_home"
        android:drawableTint="#FFFFFF"/>

    <Button style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/btn_nav_my_work"
        android:text="My work"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:drawableTop="@android:drawable/ic_menu_agenda"
        android:drawableTint="#FFFFFF"/>

    <Button style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/btn_nav_notifications"
        android:text="Notifications"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:drawableTop="@android:drawable/ic_popup_reminder"
        android:drawableTint="#FFFFFF"/>

    <Button style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/btn_nav_more"
        android:text="More"
        android:textColor="#595DFF"
        android:textSize="12sp"
        android:drawableTop="@android:drawable/ic_menu_more"
        android:drawableTint="#595DFF"/>
</LinearLayout>