<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MondayCloneApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#595DFF</item>
        <item name="colorPrimaryVariant">#2D3092</item>
    </style>

    <style name="Theme.MondayCloneApp" parent="Base.Theme.MondayCloneApp" />


    <style name="CardStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="CardStyle.Dark" parent="CardStyle">
        <item name="android:background">#2A2C2E</item>
    </style>

    <style name="CardStyle.Blue" parent="CardStyle">
        <item name="android:background">#2D3092</item>
    </style>

    <style name="CardText.Number" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="CardText.Label" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableTint">#595DFF</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BottomNavTextStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>